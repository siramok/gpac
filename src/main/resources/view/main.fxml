<VBox prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.isu.caa.GUI.MainController">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="File">
          <items>
            <MenuItem fx:id="menuPreferences" mnemonicParsing="false" text="Preferences…" />
            <MenuItem fx:id="menuQuit" mnemonicParsing="false" onAction="#closeProgram" text="Quit" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
          <items>
            <MenuItem mnemonicParsing="false" text="About GPA Calculator" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <SplitPane dividerPositions="0.5" focusTraversable="true" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
      <items>
        <AnchorPane>
          <children>
            <Label fx:id="master" alignment="CENTER" layoutX="37.0" layoutY="14.0" minWidth="60.0" prefWidth="-1.0" style="&#10;" text="Student Information" textAlignment="CENTER" wrapText="false">
              <font>
                <Font size="18.0" fx:id="x1" />
              </font>
            </Label>
                  <TextField fx:id="InfoCurrentGPA" layoutX="128.0" layoutY="55.0" prefHeight="25.0" prefWidth="86.0" />
                  <TextField fx:id="InfoCurrentCredits" layoutX="128.0" layoutY="89.0" prefHeight="25.0" prefWidth="86.0" />
                  <Label alignment="CENTER" layoutX="30.0" layoutY="89.0" prefHeight="25.0" prefWidth="86.0" text="Current Credits" />
                  <Label alignment="CENTER" layoutX="54.0" layoutY="256.0" prefHeight="25.0" prefWidth="118.0" text="Grade Scale" textAlignment="CENTER">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <TableView fx:id="GradeScaleTableView" layoutX="-2.0" layoutY="281.0" prefHeight="295.0" prefWidth="237.0">
                    <columns>
                      <TableColumn fx:id="GradeScaleLetterColumn" editable="false" prefWidth="67.0" resizable="false" sortable="false" text="Letter" />
                      <TableColumn fx:id="GradeScaleRangeColumn" editable="false" prefWidth="93.0" resizable="false" sortable="false" text="Grade" />
                        <TableColumn fx:id="GradeScaleNumberColumn" editable="false" prefWidth="76.0" resizable="false" sortable="false" text="GPA" />
                    </columns>
                  </TableView>
                  <Button fx:id="CalculateButton" layoutX="11.0" layoutY="160.0" mnemonicParsing="false" onAction="#calculateFields" prefHeight="77.0" prefWidth="203.0" text="Calculate">
                     <font>
                        <Font size="17.0" />
                     </font></Button>
                  <Separator layoutX="14.0" layoutY="243.0" prefHeight="13.0" prefWidth="203.0" />
                  <Label alignment="CENTER" layoutX="43.0" layoutY="121.0" prefHeight="25.0" prefWidth="72.0" text="Desired GPA" />
                  <TextField fx:id="InfoDesiredGPA" layoutX="128.0" layoutY="121.0" prefHeight="25.0" prefWidth="86.0" />
                  <Label alignment="CENTER" layoutX="43.0" layoutY="55.0" prefHeight="25.0" prefWidth="72.0" text="Current GPA" />
          </children>
        </AnchorPane>
        <AnchorPane>
          <children>
                  <TableView fx:id="CourseTableView" editable="true" layoutX="-3.0" layoutY="208.0" prefHeight="368.0" prefWidth="668.0">
                    <columns>
                      <TableColumn fx:id="CourseColumn" prefWidth="201.0" resizable="false" text="Course" />
                      <TableColumn fx:id="CreditHoursColumn" prefWidth="120.0" resizable="false" text="Credit Hours" />
                        <TableColumn fx:id="ExpectedGradeColumn" prefWidth="133.0" resizable="false" text="Expected Grade" />
                        <TableColumn fx:id="RetakeColumn" prefWidth="102.0" resizable="false" text="Retake" />
                        <TableColumn fx:id="OriginalGradeColumn" prefWidth="110.0" resizable="false" text="Original Grade" />
                    </columns>
                  </TableView>
                  <Label fx:id="ResultsSemesterGPA" alignment="CENTER" layoutX="270.0" layoutY="6.0" prefHeight="34.0" prefWidth="173.0" text="Semester GPA: ">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <Label fx:id="ResultsCumulativeGPA" alignment="CENTER" layoutX="465.0" layoutY="10.0" prefHeight="27.0" prefWidth="188.0" text="Cumulative GPA:">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <Separator layoutX="-1.0" layoutY="43.0" prefHeight="13.0" prefWidth="668.0" />
                  <Label layoutX="33.0" layoutY="65.0" prefHeight="25.0" prefWidth="395.0" text="• You would need a GPA of  %s to raise your culmative GPA to %s.">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Label>
                  <Separator layoutX="449.0" layoutY="-3.0" orientation="VERTICAL" prefHeight="52.0" prefWidth="6.0" />
                  <Separator layoutX="255.0" layoutY="-3.0" orientation="VERTICAL" prefHeight="52.0" prefWidth="6.0" />
                  <Label fx:id="master1" alignment="CENTER" layoutX="14.0" layoutY="10.0" minWidth="60.0" prefWidth="-1.0" style="&#10;" text="Results" textAlignment="CENTER" wrapText="false">
                     <font>
                        <Font size="18.0" fx:id="x11" />
                     </font>
                  </Label>
                  <Label layoutX="33.0" layoutY="90.0" prefHeight="25.0" prefWidth="474.0" text="• You would need %s credit hours at a 4.0 GPA to raise your culmative GPA to %s.">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Label>
                  <Label layoutX="33.0" layoutY="115.0" prefHeight="25.0" prefWidth="493.0" text="• You would need %s credit hours at a 3.5 GPA to raise your culmative GPA to %s.">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Label>
                  <Label layoutX="33.0" layoutY="140.0" prefHeight="25.0" prefWidth="493.0" text="• You would need %s credit hours at a 3.0 GPA to raise your culmative GPA to %s.">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Label>
          </children>
        </AnchorPane>
      </items>
    </SplitPane>
  </children>
</VBox>
